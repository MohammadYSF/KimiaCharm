@model ViewModels.RegisterViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "ثبت نام در سایت";
    ViewData["h1"] = "ثبت نام در سایت";
    ViewData["h1Description"] = "لطفا اطلاعات را با دقت پر کنید . چرا که ما ازین اطلاعات برای تماس با شما و ارسال محصولات استفاده خواهیم کرد";
}
<form class="row g-3 needs-validation" novalidate>
    <div class="col-md-4">
        <label for="validationCustom01" class="form-label">نام</label>
        <input type="text" class="form-control" id="validationCustom01" value="محمد" required>
        <div class="valid-feedback">
            اوکیه !
        </div>
    </div>
    <div class="col-md-4">
        <label for="validationCustom02" class="form-label">نام خانوداگی</label>
        <input type="text" class="form-control" id="validationCustom02" value="یوسفیان" required>
        <div class="valid-feedback">
            اوکیه !
        </div>
    </div>
    <div class="col-md-4">
        <label for="validationCustomUsername" class="form-label">ایمیل</label>
        <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend">@Html.Raw("@")</span>
            <input type="text" class="form-control" id="validationCustomUsername"
                   aria-describedby="inputGroupPrepend" placeholder="ايميل خود را وارد کنيد" required>
            <div class="invalid-feedback">
                لطفا ایمیل خود را وارد کنید
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <label for="validationCustom03" class="form-label">شهر</label>
        <input type="text" class="form-control" id="validationCustom03" placeholder="شهر خود را انتخاب کنيد" required>
        <div class="invalid-feedback">
            لطفا نام شهر خود را وارد کنید
        </div>
    </div>
    <div class="col-md-3">
        <label for="validationCustom04" class="form-label">استان</label>
        <select class="form-select" id="validationCustom04" required>
            <option selected disabled value="">انتخاب کنید</option>
            <option>...</option>
        </select>
        <div class="invalid-feedback">
            لطفا استان خود را انتخاب کنید
        </div>
    </div>
    <div class="col-md-3">
        <label for="validationCustom05" class="form-label">کد پستی</label>
        <input type="text" class="form-control" id="validationCustom05" placeholder="کد پستی خود را وارد کنید" required>
        <div class="invalid-feedback">
            کد پستی خود را وارد کنید
        </div>
    </div>
    <div class="col-12 mx-auto">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
                قوانین سایت را خوانده و موافقم
            </label>
            <div class="invalid-feedback">
                باید مواففت خود را اعلام کنید
            </div>
        </div>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">ثبت نام</button>
    </div>
</form>
@section Scripts{

    <script src="/js/account/register.js"></script>
}
