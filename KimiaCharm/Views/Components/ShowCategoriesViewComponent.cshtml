@model IEnumerable<Category>
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">دسته بندی</a>
    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var item in Model)
        {
            <li><a class="dropdown-item" asp-action="ShowProductsByCategoryID" asp-controller="Product" asp-route-categoryID="@(item.CategoryID)">@item.Name</a></li>
        }
        <li><hr class="dropdown-divider" /></li>
        <li><a class="dropdown-item" asp-action="Index" asp-controller="Home">همه محصولات</a></li>
    </ul>
</li>